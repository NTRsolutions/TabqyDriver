<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChangePassword">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <LinearLayout
        android:padding="@dimen/padding_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLength="12"
            android:hint="Current password"
            android:layout_marginRight="@dimen/padding_circle_button"
            android:id="@+id/changepassword_fragment_current_password"
            android:inputType="textPassword"
            android:textColorHint="@color/text_gray"
            android:layout_marginBottom="@dimen/button_margin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLength="12"
            android:hint="New Password"
            android:layout_marginRight="@dimen/padding_circle_button"
            android:id="@+id/changepassword_fragment_new_password"
            android:inputType="textPassword"
            android:textColorHint="@color/text_gray"
            android:layout_marginBottom="@dimen/button_margin"
            />
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLength="12"
            android:id="@+id/changepassword_fragment_confirm_password"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:layout_marginRight="@dimen/padding_circle_button"
            android:textColorHint="@color/text_gray"
            android:layout_marginBottom="@dimen/button_margin"/>


        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/changepassword_fragment_current_password"
            android:background="@drawable/editext_bg"
            android:layout_margin="@dimen/button_margin"
            android:hint="Current password"/>
        </android.support.design.widget.TextInputLayout>-->
        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/button_margin"
            android:id="@+id/changepassword_fragment_et_new_password"
            android:background="@drawable/editext_bg"
            android:hint="New password"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/button_margin"
            android:id="@+id/changepassword_fragment_et_confirm_password"
            android:background="@drawable/editext_bg"
            android:hint="Confirm Password"/>-->

        <com.tabqydriver.customtext.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE PASSWORD"
            android:id="@+id/changepassword_update_password"
            android:paddingTop="@dimen/top_bottom_padding"
            android:paddingBottom="@dimen/top_bottom_padding"
            android:textColor="@color/text_white"
            android:layout_margin="@dimen/button_margin"
            android:gravity="center"
            android:background="@drawable/button_pink"
            />

    </LinearLayout>

</LinearLayout>