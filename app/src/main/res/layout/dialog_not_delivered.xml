<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@color/text_white"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15">


        <com.tabqydriver.customtext.CustomTextViewSemiBold
            android:id="@+id/dialog_not_delivered_tv_reason"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="Reason"
            android:textColor="@color/text_light_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:layout_gravity="start"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:background="@drawable/button_gray_hollow"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_not_delivered_tv_submit"
            android:text="Submit"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_12"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@drawable/button_pink"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_not_delivered_tv_cancel"
            android:text="Cancel"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_12"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@drawable/button_gray_less_radius"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_dark_pink_round"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_man"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/button_dark_pink_round"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_15">

        <com.tabqydriver.customtext.CustomTextView
            android:id="@+id/dialog_not_delivered_tv_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@color/text_white"
            android:textSize="14sp"/>

    </LinearLayout>
</RelativeLayout>


